{
  "name": "potential",
  "version": "1.3.0",
  "description": "a minimal promises A+ implementation",
  "homepage": "https://github.com/glebec/potential",
  "author": {
    "name": "Gabriel Lebec",
    "email": "glebec@gmail.com",
    "url": "https://github.com/glebec"
  },
  "main": "lib/potential.js",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "commitizen": "^2.8.1",
    "cz-conventional-changelog": "^1.1.6",
    "eslint": "^0.24.0",
    "ghooks": "^1.2.1",
    "promises-aplus-tests": "2.x",
    "semantic-release": "^4.3.5"
  },
  "scripts": {
    "commit": "git-cz",
    "test": "promises-aplus-tests test/aplus-adapter",
    "test:vett": "npm test -- --reporter dot --bail",
    "lint": "eslint lib/potential.js lib/extend.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/glebec/potential.git"
  },
  "bugs": "https://github.com/glebec/potential/issues",
  "keywords": [
    "potential",
    "promise",
    "promises",
    "promises-a",
    "promises-aplus",
    "deferred",
    "future",
    "async",
    "asynchronous",
    "control flow",
    "node"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test:vett"
    }
  }
}
